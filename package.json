{
  "name": "edgespec",
  "version": "0.0.2",
  "description": "Write Winter-CG compatible routes with filesystem routing and tons of features",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "git@github.com:seamapi/edgespec.git",
  "scripts": {
    "build": "tsup",
    "pretest": "npm run build",
    "test": "ava",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "cli:dev": "tsx src/cli/cli.ts",
    "example:hello-world": "node --loader=tsx --no-warnings ./src/cli/cli.js serve ./examples/hello-world/routes"
  },
  "bin": {
    "edgespec": "./dist/cli.js"
  },
  "keywords": [],
  "author": "Seam Labs Inc.",
  "license": "ISC",
  "devDependencies": {
    "@ava/get-port": "^2.0.0",
    "@ava/typescript": "^4.1.0",
    "@types/node": "^18.13.0",
    "ava": "^6.0.1",
    "axios": "^1.6.2",
    "edge-runtime": "^2.5.7",
    "esbuild-register": "^3.5.0",
    "execa": "^8.0.1",
    "p-retry": "^6.1.0",
    "prettier": "^3.1.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "type-fest": "^4.10.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@edge-runtime/node-utils": "^2.2.2",
    "@edge-runtime/primitives": "^4.0.5",
    "clipanion": "^4.0.0-rc.3",
    "esbuild": "^0.19.11",
    "human-readable": "^0.2.1",
    "make-vfs": "^1.1.0",
    "next-route-matcher": "^1.0.2",
    "redaxios": "^0.5.1",
    "watcher": "^2.3.0",
    "yargs": "^17.7.2",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
